generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  walletAddress String   @unique // Primary Identity
  username      String?  // Optional display name
  joinedHubs    Hub[]
  scores        Score[]
}
  
model Hub {
  id          String   @id @default(uuid())
  name        String   // e.g. "Off The Grid"
  gameId      String   @unique
  messages    Message[] // *Assuming Message model exists for chat*
  users       User[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  hub       Hub      @relation(fields: [hubId], references: [id])
  hubId     String
}
  
model Game {
  id          String   @id @default(uuid())
  name        String
  apiKey      String   @unique // Public Key for Game Devs
  secretKey   String   // Private Key (Simulated for demo)
  hub         Hub?     @relation(fields: [hubId], references: [id])
  hubId       String?  @unique
}
  
model Score {
  id          String   @id @default(uuid())
  value       Int
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  gameId      String
}
